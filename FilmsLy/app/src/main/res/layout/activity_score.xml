<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background3" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Your Score board"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:gravity="center" />


                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:id="@+id/famousCard"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/purpleLight"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">


                    <ImageView
                        android:id="@+id/iv_icon_one"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="left"
                        android:src="@drawable/popcorn"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat"
                        android:text="Famous Words"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_marginLeft="50dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/words_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="50sp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="210dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/purpleSemiDark"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dandwCard"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:clickable="true"
                    android:layout_marginTop="70dp"
                    android:background="@color/purpleLight"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <ImageView
                        android:id="@+id/iv_icon_two"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="left"
                        android:src="@drawable/cinema"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat"
                        android:text="Directors and Writers"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_marginLeft="50dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/directors_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="50sp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="210dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/purpleSemiDark"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/actorCard"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:clickable="true"
                    android:layout_marginTop="70dp"
                    android:background="@color/purpleLight"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <ImageView
                        android:id="@+id/iv_icon_three"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_gravity="left"
                        android:src="@drawable/theater"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/montserrat"
                        android:text="Actors and Who They Play"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginLeft="50dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/actors_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="50sp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="210dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/purpleSemiDark"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="30dp">
                    <Button
                        android:id="@+id/btn_return"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:text="Return to Categories"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:background="@color/goldTrim"
                        tools:ignore="RtlCompat"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>




</RelativeLayout>
